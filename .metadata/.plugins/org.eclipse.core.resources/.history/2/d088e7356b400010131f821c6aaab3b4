package stringMethods;

public class stringMethods {
public static void main(String[] args) {
		
		
		String s1 ="      Hariharan Technology is best way of IT   ";
		
		char charAt = s1.charAt(18);
		System.out.println(charAt);
		
		int length = s1.length();
		System.out.println(length);
		
		System.out.println((length)-1);
		
		String lowerCase = s1.toLowerCase();
		System.out.println(lowerCase);
		
		String upperCase = s1.toUpperCase();
		System.out.println(upperCase);
		
		String replace = s1.replace("IT","Information Technology");
		System.out.println(replace);
		
		int indexOf = s1.indexOf("a");
		System.out.println(indexOf);
		
		int lastIndexOf = s1.lastIndexOf("i");
		System.out.println(lastIndexOf);
		
		boolean startsWith = s1.startsWith("H");
		System.out.println(startsWith);
		
		int lastIndexOf2 = s1.lastIndexOf("t");
		System.out.println(lastIndexOf2);
		
		boolean contains = s1.contains("best");
		System.out.println(contains);
		
		boolean empty = s1.isEmpty();
		System.out.println(empty);
		
		String trim = s1.trim();
		System.out.println(trim);
		
		String substring = s1.substring(12);
		System.out.println(substring);
		
		String substring2 = s1.substring(10, 20);
		System.out.println(substring2);
		
		
		System.out.println("Hariharan");
		System.out.println("Hi all, Good Morning  ");
		
		
		
		
		
		
	}

}
